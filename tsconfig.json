{
    "exclude": ["node_modules","build"],
    "include": ["src"],
    "compilerOptions": {
        "strict": true,
        "module": "CommonJS",
        "target": "ESNext",
        "moduleResolution": "Node",
        "outDir": "build",
        "rootDirs": ["src"],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true,
        "typeRoots": ["./node_modules/@types"],
        "lib": ["ESNext"],
        "baseUrl": "."
    }
}