{
    "exclude": ["node_modules", "dist"],
    "include": ["src"],
    "compilerOptions": {
        "strict": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "rootDirs": ["src"],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true,
        "lib": ["ESNext"],
        "baseUrl": ".",
    }
}